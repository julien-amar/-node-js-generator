<html>
  <head>
    <title>EComm - Authentification</title>

    <link rel="stylesheet" href="vendors/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="vendors/admin-lte/dist/css/AdminLTE.css" />
  </head>

  <body class="login-page">
    <div class="login-box">
      <div class="login-logo">
        <a href="/"><b>E</b>Comm</a>
      </div>

      <div class="login-box-body">
        <p class="login-box-msg">Connecter vous à votre compte</p>

        <% if (message.length > 0) { %>
          <div class="callout callout-danger">
            <%= message %>
          </div>
        <% } %>

        <form action="login" method="post">
          <div class="form-group has-feedback">
            <input class="form-control" placeholder="Nom utilisateur" type="text" name="username" autofocus="autofocus" required="required" />
            <span class="glyphicon glyphicon-envelope form-control-feedback" />
          </div>

          <div class="form-group has-feedback">
            <input class="form-control" placeholder="Mot de passe" name="password" type="password" required="required" />
            <span class="glyphicon glyphicon-lock form-control-feedback" />
          </div>

          <button class="btn btn-primary btn-block btn-flat" type="submit">Se connecter</button>
        </form>
        
        <a class="text-center" href="register">Créer un compte</a>
  </body>
</html>